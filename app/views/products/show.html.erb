<body>
  <h1>Product Info</h1>
  <% if @product.images.length > 0 %>
      <img src="<%= @product.images[0].url%>" width=300>
    <% end %>
  <h3> Product: <%= @product.name %> </h3>
  <p> Price: <%= @product.price %> </p>
  <p> Description: <%= @product.description %></p>
  <a href="/products">Back to all products</a>
</body>